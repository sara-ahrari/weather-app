{
  "openapi": "3.0.0",
  "info": {
    "title": "Weather API",
    "description": "This is a simple NodeJS API to fetch weather data from OpenWeatherMap API.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8000"
    }
  ],
  "paths": {
    "/weather": {
      "get": {
        "summary": "Get weather data for a specific city",
        "description": "Get weather data either current or forecast for a specific city",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "city",
            "in": "query",
            "description": "City name",
            "required": true,
            "type": "string",
            "default": "Malmö"
          },
          {
            "name": "type",
            "in": "query",
            "description": "Type of weather data",
            "required": true,
            "type": "string",
            "default": "current"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "Name of the city.",
                      "example": "Malmö"
                    },
                    "main": {
                      "type": "object",
                      "description": "Basic info about weather such as temp, humidity, sea-lever, etc.",
                      "example": {
                        "temp": 10,
                        "feels_like": 8.5,
                        "temp_min": 10,
                        "temp_max": 10,
                        "pressure": 1012,
                        "humidity": 87
                      }

                    },
                    "weather": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      },
                      "description": "Information weather condition such as clear sky, rain, etc.",
                      "example": [
                        {
                          "id": 800,
                          "main": "Clear",
                          "description": "clear sky",
                          "icon": "01n"
                        }
                      ]
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid query parameter"
          }
        }
      }
    }
  }
}
